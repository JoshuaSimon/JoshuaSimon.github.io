---
import RatingStars from "./RatingStars.astro";

interface Props {
    title: string;
    image: string;
    time: number;
    rating: number;
    slug: string;
}

const { title, image, time, rating, slug } = Astro.props;
---

<article
    class="recipe-card bg-white/90 dark:bg-dark-surface/90 backdrop-blur-sm rounded-lg shadow-lg dark:shadow-black/50 overflow-hidden hover:shadow-xl dark:hover:shadow-black/70 transition-all duration-300 group border border-violet-100/50 dark:border-dark-border"
>
    <a
        href={`/recipes/${slug}`}
        class="block focus:outline-none focus:ring-2 focus:ring-violet-500 focus:ring-offset-2 dark:focus:ring-offset-dark-surface rounded-lg"
    >
        <div class="relative overflow-hidden card-shine">
            <img
                src={image}
                alt={title}
                class="w-full h-56 object-cover group-hover:scale-110 transition-transform duration-500 ease-out"
                loading="lazy"
                decoding="async"
            />
            <div
                class="absolute top-3 right-3 bg-white/95 dark:bg-dark-bg/95 backdrop-blur-md px-3 py-1.5 rounded-full shadow-md dark:shadow-black/50 group-hover:shadow-lg transition-shadow duration-300 border border-violet-200/30 dark:border-dark-border/50"
            >
                <span
                    class="text-sm font-medium text-gray-700 dark:text-dark-text flex items-center gap-1"
                >
                    <svg
                        class="w-4 h-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                        ></path>
                    </svg>
                    {time} min
                </span>
            </div>
        </div>

        <div class="p-5 sm:p-6">
            <h3
                class="text-xl font-bold text-gray-900 dark:text-dark-text mb-3 group-hover:text-violet-600 dark:group-hover:text-violet-400 transition-colors duration-300 line-clamp-2"
            >
                {title}
            </h3>

            <div class="flex items-center justify-between">
                <RatingStars rating={rating} size="sm" />
                <span
                    class="text-violet-600 dark:text-violet-400 font-medium text-sm flex items-center gap-1 opacity-0 group-hover:opacity-100 transition-all duration-300 transform group-hover:translate-x-1"
                >
                    View Recipe
                    <svg
                        class="w-4 h-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 5l7 7-7 7"></path>
                    </svg>
                </span>
            </div>
        </div>
    </a>
</article>
