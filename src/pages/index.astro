---
import BaseLayout from "../layouts/BaseLayout.astro";
import RecipeCard from "../components/RecipeCard.astro";
import { getCollection } from "astro:content";

const recipes = await getCollection("recipes");
// Sort alphabetically by title
const sortedRecipes = recipes.sort((a, b) => {
    return a.data.title.localeCompare(b.data.title);
});
---

<BaseLayout
    title="Recipe Collection - Delicious Recipes for Everyone"
    description="Browse our collection of delicious recipes with detailed instructions, cooking times, and ratings. From quick meals to gourmet dishes."
>
    {/* Hero Section */}
    <section
        class="relative bg-gradient-to-r from-amber-50 via-orange-50 to-amber-50 dark:from-dark-surface dark:via-dark-bg dark:to-dark-surface border-b border-amber-100 dark:border-dark-border overflow-hidden"
    >
        {/* Decorative background elements */}
        <div class="absolute inset-0 opacity-30 dark:opacity-10">
            <div
                class="absolute top-20 right-20 w-64 h-64 bg-amber-200 dark:bg-amber-900 rounded-full blur-3xl"
            >
            </div>
            <div
                class="absolute bottom-20 left-20 w-96 h-96 bg-orange-200 dark:bg-orange-900 rounded-full blur-3xl"
            >
            </div>
        </div>

        <div class="container mx-auto px-4 py-20 md:py-28 relative">
            <div class="max-w-3xl mx-auto text-center">
                <h1
                    class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-dark-text mb-6 leading-tight"
                >
                    Welcome to <span class="gradient-text"
                        >Recipe Collection</span
                    >
                </h1>
                <p
                    class="text-lg md:text-xl text-gray-700 dark:text-dark-text-muted mb-10 leading-relaxed"
                >
                    Discover delicious recipes with step-by-step instructions,
                    beautiful photos, and helpful tips. Whether you're a
                    beginner or an experienced chef, find your next favorite
                    dish here.
                </p>
                <div
                    class="flex flex-wrap items-center justify-center gap-6 text-sm text-gray-700 dark:text-dark-text"
                >
                    <div
                        class="flex items-center gap-2 bg-white/70 dark:bg-dark-surface/70 backdrop-blur-sm px-4 py-2 rounded-full shadow-sm dark:shadow-gray-900/30"
                    >
                        <span class="text-2xl">üìö</span>
                        <span
                            ><strong class="text-gray-900 dark:text-dark-text"
                                >{recipes.length}</strong
                            > recipes</span
                        >
                    </div>
                    <div
                        class="flex items-center gap-2 bg-white/70 dark:bg-dark-surface/70 backdrop-blur-sm px-4 py-2 rounded-full shadow-sm dark:shadow-gray-900/30"
                    >
                        <span class="text-2xl">‚è±Ô∏è</span>
                        <span>Quick & Easy</span>
                    </div>
                    <div
                        class="flex items-center gap-2 bg-white/70 dark:bg-dark-surface/70 backdrop-blur-sm px-4 py-2 rounded-full shadow-sm dark:shadow-gray-900/30"
                    >
                        <span class="text-2xl">‚≠ê</span>
                        <span>Rated & Tested</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {/* Featured Recipes Section */}
    <section class="container mx-auto px-4 py-16 md:py-20">
        <div class="mb-10 text-center md:text-left">
            <h2
                class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-dark-text mb-3 inline-block"
            >
                Featured Recipes
            </h2>
            <p class="text-lg text-gray-600 dark:text-dark-text-muted">
                Our most popular and highest-rated dishes
            </p>
        </div>

        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {
                sortedRecipes.map((recipe) => (
                    <RecipeCard
                        title={recipe.data.title}
                        image={recipe.data.image}
                        time={recipe.data.time}
                        rating={recipe.data.rating}
                        slug={recipe.slug}
                    />
                ))
            }
        </div>
    </section>

    {/* Quick Links Section */}
    <section
        class="bg-gray-100 dark:bg-dark-surface border-t border-gray-200 dark:border-dark-border"
    >
        <div class="container mx-auto px-4 py-16">
            <div class="grid md:grid-cols-3 gap-8 lg:gap-12 max-w-5xl mx-auto">
                <div
                    class="text-center bg-white dark:bg-dark-bg p-8 rounded-xl shadow-sm dark:shadow-gray-900/30 hover:shadow-md dark:hover:shadow-gray-900/50 transition-shadow duration-300"
                >
                    <div
                        class="text-5xl mb-4 inline-block transform hover:scale-110 transition-transform duration-300"
                    >
                        üçù
                    </div>
                    <h3
                        class="text-xl font-semibold text-gray-900 dark:text-dark-text mb-3"
                    >
                        Easy to Follow
                    </h3>
                    <p
                        class="text-gray-600 dark:text-dark-text-muted leading-relaxed"
                    >
                        Clear step-by-step instructions make cooking a breeze
