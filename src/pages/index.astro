---
import BaseLayout from "../layouts/BaseLayout.astro";
import RecipeCard from "../components/RecipeCard.astro";
import { getCollection } from "astro:content";

const recipes = await getCollection("recipes");
// Sort by rating (highest first), then by title
const sortedRecipes = recipes.sort((a, b) => {
    if (b.data.rating !== a.data.rating) {
        return b.data.rating - a.data.rating;
    }
    return a.data.title.localeCompare(b.data.title);
});
---

<BaseLayout
    title="Recipe Collection - Delicious Recipes for Everyone"
    description="Browse our collection of delicious recipes with detailed instructions, cooking times, and ratings. From quick meals to gourmet dishes."
>
    {/* Hero Section */}
    <section
        class="bg-linear-to-r from-amber-50 to-orange-50 border-b border-amber-100"
    >
        <div class="container mx-auto px-4 py-16 md:py-24">
            <div class="max-w-3xl mx-auto text-center">
                <h1
                    class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-4"
                >
                    Welcome to Recipe Collection
                </h1>
                <p class="text-lg md:text-xl text-gray-700 mb-8">
                    Discover delicious recipes with step-by-step instructions,
                    beautiful photos, and helpful tips. Whether you're a
                    beginner or an experienced chef, find your next favorite
                    dish here.
                </p>
                <div
                    class="flex flex-wrap items-center justify-center gap-4 text-sm text-gray-600"
                >
                    <div class="flex items-center gap-2">
                        <span class="text-2xl">üìö</span>
                        <span><strong>{recipes.length}</strong> recipes</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="text-2xl">‚è±Ô∏è</span>
                        <span>Quick & Easy</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="text-2xl">‚≠ê</span>
                        <span>Rated & Tested</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {/* Featured Recipes Section */}
    <section class="container mx-auto px-4 py-12 md:py-16">
        <div class="mb-8">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">
                Featured Recipes
            </h2>
            <p class="text-gray-600">
                Our most popular and highest-rated dishes
            </p>
        </div>

        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {
                sortedRecipes.map((recipe) => (
                    <RecipeCard
                        title={recipe.data.title}
                        image={recipe.data.image}
                        time={recipe.data.time}
                        rating={recipe.data.rating}
                        slug={recipe.slug}
                    />
                ))
            }
        </div>
    </section>

    {/* Quick Links Section */}
    <section class="bg-gray-100 border-t border-gray-200">
        <div class="container mx-auto px-4 py-12">
            <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
                <div class="text-center">
                    <div class="text-4xl mb-3">üçù</div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">
                        Easy to Follow
                    </h3>
