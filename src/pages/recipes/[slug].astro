---
import BaseLayout from "../../layouts/BaseLayout.astro";
import RatingStars from "../../components/RatingStars.astro";
import { getCollection } from "astro:content";
import type { GetStaticPaths } from "astro";

export const getStaticPaths = (async () => {
    const recipes = await getCollection("recipes");
    return recipes.map((recipe) => ({
        params: { slug: recipe.slug },
        props: { recipe },
    }));
}) satisfies GetStaticPaths;

const { recipe } = Astro.props;
const { Content } = await recipe.render();
---

<BaseLayout
    title={`${recipe.data.title} - Joshua's Recipe Collection`}
    description={`Learn how to make ${recipe.data.title}. Cooking time: ${recipe.data.time} minutes. ${recipe.data.notes || ""}`}
>
    {/* Recipe Header */}
    <article class="container mx-auto px-4 py-10 md:py-12 max-w-4xl">
        {/* Breadcrumb */}
        <nav class="mb-8 text-sm">
            <ol
                class="flex items-center gap-2 text-gray-600 dark:text-dark-text-muted"
                aria-label="Breadcrumb"
            >
                <li>
                    <a
                        href="/"
                        class="hover:text-violet-600 dark:hover:text-violet-400 transition-colors duration-200 font-medium"
                    >
                        Home
                    </a>
                </li>
                <li>/</li>
                <li class="text-gray-900 dark:text-dark-text font-medium">
                    {recipe.data.title}
                </li>
            </ol>
        </nav>

        {/* Recipe Title */}
        <header class="mb-10">
            <h1
                class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-dark-text mb-6 leading-tight"
            >
                {recipe.data.title}
            </h1>

            {/* Metadata */}
            <div
                class="flex flex-wrap items-center gap-6 text-gray-700 dark:text-dark-text-muted pb-6 border-b-2 border-gray-200 dark:border-dark-border"
            >
                <div class="flex items-center gap-2">
                    <svg
                        class="w-5 h-5 text-violet-600"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                        ></path>
                    </svg>
                    <span>
                        <strong class="text-gray-900 dark:text-dark-text"
                            >{recipe.data.time}</strong
                        > minutes
                    </span>
                </div>
                <div class="flex items-center gap-2">
                    <RatingStars rating={recipe.data.rating} size="md" />
                </div>
                <div class="flex items-center gap-2">
                    <svg
                        class="w-5 h-5 text-violet-600"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
                        ></path>
                    </svg>
                    <span>
                        <strong class="text-gray-900 dark:text-dark-text"
                            >{recipe.data.ingredients.length}</strong
                        > ingredients
                    </span>
                </div>
            </div>
        </header>

        {/* Hero Image */}
        <div class="mb-10 rounded-xl overflow-hidden shadow-xl card-shine">
            <img
                src={recipe.data.image}
                alt={recipe.data.title}
                class="w-full h-64 md:h-96 lg:h-125 object-cover"
                loading="eager"
            />
        </div>

        {/* Notes Section (if present) */}
        {
            recipe.data.notes && (
                <div class="mb-10 bg-violet-50 dark:bg-violet-900/20 border-l-4 border-violet-500 dark:border-violet-600 p-6 rounded-r-lg shadow-sm dark:shadow-black/30">
                    <div class="flex items-start gap-4">
                        <svg
                            class="w-6 h-6 text-violet-600 dark:text-violet-500 shrink-0 mt-1"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                            />
                        </svg>
                        <div>
                            <h3 class="font-semibold text-gray-900 dark:text-dark-text mb-1">
                                Chef's Note
                            </h3>
                            <p class="text-gray-700 dark:text-dark-text-muted">
                                {recipe.data.notes}
                            </p>
                        </div>
                    </div>
                </div>
            )
        }

        {/* Two Column Layout for Ingredients & Instructions */}
        <div class="grid lg:grid-cols-3 gap-10 lg:gap-12">
            {/* Ingredients Sidebar */}
            <aside class="lg:col-span-1">
                <div
                    class="bg-white/90 dark:bg-dark-surface/90 backdrop-blur-sm rounded-xl shadow-lg dark:shadow-black/50 p-6 lg:p-8 lg:sticky lg:top-24 border border-gray-100 dark:border-dark-border"
                >
                    <div
                        class="flex flex-wrap items-center justify-between gap-3 mb-6 pb-4 border-b-2 border-violet-100 dark:border-dark-border"
                    >
                        <h2
                            class="text-xl lg:text-2xl font-bold text-gray-900 dark:text-dark-text flex items-center gap-2"
                        >
                            <svg
                                class="w-6 h-6 text-violet-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"
                                ></path>
                            </svg>
                            Ingredients
                        </h2>
                        <button
                            id="copy-ingredients-btn"
                            class="inline-flex items-center gap-1.5 px-2.5 py-1.5 text-xs lg:text-sm font-medium text-violet-700 dark:text-violet-400 bg-violet-50 dark:bg-violet-900/30 hover:bg-violet-100 dark:hover:bg-violet-900/50 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:ring-offset-2 dark:focus:ring-offset-dark-surface shrink-0"
                            aria-label="Copy ingredients to clipboard"
                            title="Copy ingredients to clipboard"
                        >
                            <svg
                                id="copy-icon"
                                class="w-3.5 h-3.5 lg:w-4 lg:h-4"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                                ></path>
                            </svg>
                            <svg
                                id="check-icon"
                                class="w-3.5 h-3.5 lg:w-4 lg:h-4 hidden"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span id="copy-text">Copy</span>
                        </button>
                    </div>
                    <ul id="ingredients-list" class="space-y-4">
                        {
                            recipe.data.ingredients.map((ingredient) => (
                                <li class="flex items-start gap-3 text-gray-700 dark:text-dark-text-muted leading-relaxed">
                                    <span class="text-violet-600 dark:text-violet-500 text-lg mt-0.5 shrink-0">
                                        ‚óè
                                    </span>
                                    <span class="flex-1">{ingredient}</span>
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </aside>

            {/* Instructions Main Content */}
            <div class="lg:col-span-2">
                <div
                    class="prose prose-lg prose-gray dark:prose-invert max-w-none
                    prose-headings:text-gray-900 dark:prose-headings:text-dark-text prose-headings:font-bold
                    prose-h2:text-3xl prose-h2:mb-6 prose-h2:mt-10 prose-h2:pb-3 prose-h2:border-b prose-h2:border-gray-200 dark:prose-h2:border-dark-border
                    prose-h3:text-xl prose-h3:mb-4 prose-h3:mt-8 prose-h3:text-violet-900 dark:prose-h3:text-violet-500
                    prose-p:text-gray-700 dark:prose-p:text-dark-text-muted prose-p:leading-relaxed prose-p:text-lg
                    prose-strong:text-gray-900 dark:prose-strong:text-dark-text prose-strong:font-semibold
                    prose-ul:my-6 prose-li:text-gray-700 dark:prose-li:text-dark-text-muted prose-li:my-2
                    prose-a:text-violet-600 dark:prose-a:text-violet-400 prose-a:no-underline hover:prose-a:underline"
                >
                    <style is:global>
                        .prose ol {
                            counter-reset: list-counter;
                            list-style: none;
                            padding-left: 0;
                            margin-top: 2rem;
                            margin-bottom: 2rem;
                        }
                        .prose ol > li {
                            counter-increment: list-counter;
                            position: relative;
                            padding-left: 2.5rem;
                            margin-bottom: 1.5rem;
                            color: #1f2937;
                            line-height: 1.75;
                            font-size: 1.125rem;
                        }
                        :global(.dark) .prose ol > li {
                            color: #d1d5db;
                        }
                        .prose ol > li::before {
                            content: counter(list-counter) ".";
                            position: absolute;
                            left: 0;
                            top: 0;
                            font-weight: 700;
                            font-size: 1.25rem;
                            color: #d97706;
                        }
                        :global(.dark) .prose ol > li::before {
                            color: #fbbf24;
                        }
                        .prose ol > li > p {
                            display: inline;
                            margin: 0;
                        }
                        .prose ol > li > p strong {
                            color: #0f172a;
                            font-weight: 600;
                        }
                        :global(.dark) .prose ol > li > p strong {
                            color: #f9fafb;
                            font-weight: 600;
                        }
                    </style>
                    <Content />
                </div>
            </div>
        </div>

        {/* Copy to Clipboard Script */}
        <script is:inline define:vars={{ ingredients: recipe.data.ingredients }}
        >
            const copyBtn = document.getElementById("copy-ingredients-btn");
            const copyIcon = document.getElementById("copy-icon");
            const checkIcon = document.getElementById("check-icon");
            const copyText = document.getElementById("copy-text");

            if (copyBtn) {
                copyBtn.addEventListener("click", async () => {
                    try {
                        // Format ingredients as plain text
                        const ingredientsText = ingredients.join("\n");

                        // Copy to clipboard
                        await navigator.clipboard.writeText(ingredientsText);

                        // Show success feedback
                        copyIcon.classList.add("hidden");
                        checkIcon.classList.remove("hidden");
                        copyText.textContent = "Copied!";
                        copyBtn.classList.remove(
                            "text-violet-700",
                            "bg-violet-50",
                            "hover:bg-violet-100",
                        );
                        copyBtn.classList.add("text-green-700", "bg-green-50");

                        // Reset after 2 seconds
                        setTimeout(() => {
                            copyIcon.classList.remove("hidden");
                            checkIcon.classList.add("hidden");
                            copyText.textContent = "Copy";
                            copyBtn.classList.remove(
                                "text-green-700",
                                "bg-green-50",
                            );
                            copyBtn.classList.add(
                                "text-violet-700",
                                "bg-violet-50",
                                "hover:bg-violet-100",
                            );
                        }, 2000);
                    } catch (err) {
                        console.error("Failed to copy ingredients:", err);
                        // Fallback for older browsers
                        copyText.textContent = "Failed";
                        setTimeout(() => {
                            copyText.textContent = "Copy";
                        }, 2000);
                    }
                });
            }
        </script>

        {/* Back to Recipes Link */}
        <div
            class="mt-16 pt-10 border-t-2 border-gray-200 dark:border-dark-border"
        >
            <a
                href="/"
                class="inline-flex items-center gap-2 text-violet-600 dark:text-violet-400 hover:text-violet-700 dark:hover:text-violet-300 font-semibold transition-all duration-200 hover:gap-3 focus:outline-none focus:ring-2 focus:ring-violet-500 focus:ring-offset-2 dark:focus:ring-offset-dark-bg rounded px-2 py-1"
            >
                <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to all recipes
            </a>
        </div>
    </article>
</BaseLayout>
