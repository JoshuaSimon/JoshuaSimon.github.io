---
import { getCollection } from "astro:content";
import "../styles/global.css";

const recipes = await getCollection("recipes");
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Recipes Test - Recipe App</title>
    </head>
    <body class="bg-gray-50 min-h-screen">
        <div class="container mx-auto px-4 py-8">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">
                Content Collections Test
            </h1>
            <p class="text-gray-600 mb-8">
                Testing Astro Content Collections - Found {recipes.length} recipes
            </p>

            <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                {
                    recipes.map((recipe) => (
                        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
                            <img
                                src={recipe.data.image}
                                alt={recipe.data.title}
                                class="w-full h-48 object-cover"
                            />
                            <div class="p-6">
                                <h2 class="text-2xl font-semibold text-gray-800 mb-2">
                                    {recipe.data.title}
                                </h2>
                                <div class="flex items-center gap-4 text-sm text-gray-600 mb-4">
                                    <span>⏱️ {recipe.data.time} min</span>
                                    <span>⭐ {recipe.data.rating}/5</span>
                                </div>
                                <p class="text-gray-700 mb-4">
                                    <strong>Ingredients:</strong>{" "}
                                    {recipe.data.ingredients.length} items
                                </p>
                                {recipe.data.notes && (
                                    <p class="text-sm text-gray-600 italic border-l-4 border-amber-500 pl-3">
                                        {recipe.data.notes}
                                    </p>
                                )}
                            </div>
                        </div>
                    ))
                }
            </div>

            <div class="mt-8 p-6 bg-white rounded-lg shadow-md">
                <h2 class="text-2xl font-semibold text-gray-800 mb-4">
                    Phase 2 Status ✅
                </h2>
                <ul class="space-y-2 text-gray-700">
                    <li class="flex items-center">
                        <span class="text-green-500 mr-2">✓</span>
                        Astro Content Collections configured
                    </li>
                    <li class="flex items-center">
                        <span class="text-green-500 mr-2">✓</span>
                        Recipe schema with Zod validation
                    </li>
                    <li class="flex items-center">
                        <span class="text-green-500 mr-2">✓</span>
                        {recipes.length} sample recipes created
                    </li>
                    <li class="flex items-center">
                        <span class="text-green-500 mr-2">✓</span>
                        Recipe images directory structure
                    </li>
                    <li class="flex items-center">
                        <span class="text-green-500 mr-2">✓</span>
                        SVG placeholder images
                    </li>
                </ul>
            </div>
        </div>
    </body>
</html>
